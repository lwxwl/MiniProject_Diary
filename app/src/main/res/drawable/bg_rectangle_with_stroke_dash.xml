<?xml version="1.0" encoding="utf-8"?>
<!-- Customize EditText -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- solid指定形状的填充色，只有android:color一个属性 -->
    <solid android:color="#fcfaf8" />
    <!-- padding设置内容区域离边界的间距 -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
    <!-- stroke设置描边 -->
    <stroke
        android:width="0.5dp"
        android:color="#000000" />
</shape>